@model LOP.ViewModels.PersonModel

@{
    ViewData["Title"] = "Длбавить работника";
}

<h2>Добавление работника</h2>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Фамилия</label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Имя</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Отчество</label>
                <input asp-for="Patronymic" class="form-control" />
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Номер телефона</label>
                <input type="tel" asp-for="Tel" class="form-control"/>
                <span asp-validation-for="Tel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Должность</label>
                <select asp-for="Position" class="form-control">
                    <option>Директор</option>
                    <option>Зам.Директора</option>
                    <option>Главный Быхгалтер</option>
                    <option>Бухгалтер</option>
                    <option>Менеджер</option>
                </select>
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Приложите метку к считывателю</label>
                <input type="password" asp-for="TagId" class="form-control" />
                <span asp-validation-for="TagId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Фото</label>
                <div class="editor-field">
                    <input type="file" name="Image" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
